<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Order Details</title>
    <%- include ("../layout/cdn")%>
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <style>
        .page-header {
            background: #f8f9fa;
            padding: 15px 0;
            border-bottom: 1px solid #dee2e6;
        }

        .breadcrumb {
            margin: 0;
            padding: 0;
            list-style: none;
            display: flex;
            gap: 10px;
        }

        .breadcrumb span {
            color: #6c757d;
        }

        .timeline {
            border-left: 3px solid #e0e0e0;
            margin: 20px 0;
            padding-left: 20px;
        }

        .timeline-item {
            position: relative;
            margin-bottom: 30px;
            padding-bottom: 10px;
        }

        .timeline-item::before {
            content: '';
            position: absolute;
            left: -29px;
            top: 0;
            width: 20px;
            height: 20px;
            border-radius: 50%;
            background: #fff;
            border: 3px solid #e0e0e0;
        }

        .timeline-item.completed::before {
            background: #28a745;
            border-color: #28a745;
        }

        .timeline-item.active::before {
            background: #007bff;
            border-color: #007bff;
            animation: pulse 2s infinite;
        }

        .timeline-item.cancelled::before {
            background: #dc3545;
            border-color: #dc3545;
        }

        .timeline-item h5 {
            color: #333;
            margin-bottom: 5px;
        }

        .timeline-item.completed h5 {
            color: #28a745;
        }

        .timeline-item.active h5 {
            color: #007bff;
        }

        .timeline-item.cancelled h5 {
            color: #dc3545;
        }

        @keyframes pulse {
            0% {
                box-shadow: 0 0 0 0 rgba(0, 123, 255, 0.4);
            }
            70% {
                box-shadow: 0 0 0 10px rgba(0, 123, 255, 0);
            }
            100% {
                box-shadow: 0 0 0 0 rgba(0, 123, 255, 0);
            }
        }

        .order-status {
            padding: 6px 12px;
            border-radius: 20px;
            font-weight: 500;
            font-size: 0.875rem;
            display: inline-block;
        }

        .status-Placed {
            background-color: #cff4fc;
            color: #055160;
        }

        .status-Processing {
            background-color: #fff3cd;
            color: #856404;
        }

        .status-Shipped {
            background-color: #d1e7dd;
            color: #0f5132;
        }

        .status-Delivered {
            background-color: #d1e7dd;
            color: #0f5132;
        }

        .status-Cancelled {
            background-color: #f8d7da;
            color: #842029;
        }

        .status-Returned {
            background-color: #e2e3e5;
            color: #41464b;
        }

        .card {
            border: none;
            box-shadow: 0 0 20px rgba(0,0,0,0.08);
            border-radius: 10px;
            margin-bottom: 30px;
        }

        .card-header {
            background-color: #fff;
            border-bottom: 1px solid #eee;
            padding: 20px;
        }

        .order-info {
            background: #f8f9fa;
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 20px;
        }

        .order-info i {
            width: 24px;
            text-align: center;
            margin-right: 10px;
        }

        .table > :not(caption) > * > * {
            padding: 15px;
        }

        .product-img {
            width: 60px;
            height: 60px;
            object-fit: cover;
            border-radius: 5px;
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">
            <img src="/img/logo_main.png" width="400" height="70" class="d-inline-block align-top" alt="Your Logo">
            
        </a>
      
    </nav>


    <div class="container mt-4">
        <div class="card">
            <div class="card-header d-flex justify-content-between align-items-center">
                <div>
                    <h4 class="mb-1">Order Id :<%= order.orderId%></h4>
                    <div class="text-muted">
                        Placed on: <%= new Date(order.orderDate).toLocaleDateString('en-US', { 
                            year: 'numeric', 
                            month: 'long', 
                            day: 'numeric',
                            hour: '2-digit',
                            minute: '2-digit'
                        }) %>
                    </div>
                </div>
                <div class="order-status status-<%= order.orderStatus %>">
                    <%= order.orderStatus %>
                </div>
            </div>

            <div class="card-body">
                <div class="row">
                    <!-- Timeline Column -->
                    <div class="col-md-4">
                        <div class="timeline">
                            <div class="timeline-item <%= order.orderStatus === 'Placed' ? 'active' : 
                                    (order.orderStatus === 'Cancelled' ? 'cancelled' : 
                                    (['Processing', 'Shipped', 'Delivered'].includes(order.orderStatus) ? 'completed' : '')) %>">
                                <h5>Order Placed</h5>
                                <p class="text-muted mb-0"><%= new Date(order.orderDate).toLocaleDateString() %></p>
                            </div>
                            
                            <div class="timeline-item <%= order.orderStatus === 'Processing' ? 'active' : 
                                    (order.orderStatus === 'Cancelled' ? 'cancelled' : 
                                    (['Shipped', 'Delivered'].includes(order.orderStatus) ? 'completed' : '')) %>">
                                <h5>Processing</h5>
                                <p class="text-muted mb-0">Order confirmation</p>
                            </div>
                            
                            <div class="timeline-item <%= order.orderStatus === 'Shipped' ? 'active' : 
                                    (order.orderStatus === 'Cancelled' ? 'cancelled' : 
                                    (order.orderStatus === 'Delivered' ? 'completed' : '')) %>">
                                <h5>Shipped</h5>
                                <p class="text-muted mb-0">Order in transit</p>
                            </div>
                            
                            <div class="timeline-item <%= order.orderStatus === 'Delivered' ? 'completed' : '' %>">
                                <h5>Delivered</h5>
                                <p class="text-muted mb-0">
                                    <%= order.deliveryDate ? new Date(order.deliveryDate).toLocaleDateString() : 'Expected delivery date' %>
                                </p>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="mt-4">
                            <% if(order.orderStatus === 'Placed' || order.orderStatus === 'Processing' ) { %>
                                <button onclick="confirmCancel('<%= order._id %>')" class="btn btn-danger w-100 mb-2">
                                    <i class="fas fa-times-circle"></i> Cancel Order
                                </button>
                            <% } else if(order.orderStatus === 'Delivered') { %>
                                <button onclick="confirmReturn('<%= order._id %>')" class="btn btn-primary w-100 mb-2">
                                    <i class="fas fa-undo"></i> Request Return
                                </button>
                            <% } %>
                        </div>
                    </div>

                    <!-- Order Details Column -->
                    <div class="col-md-8">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="order-info">
                                    <h5><i class="fas fa-user text-primary"></i>Customer Details</h5>
                                    <p class="mb-1"><%=userData?.fullName %></p>
                                    <a href="/useraccount" class="text-primary">View profile</a>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="order-info">
                                    <h5><i class="fas fa-credit-card text-primary"></i>Payment Information</h5>
                                    <p class="mb-1">Method: <%=order?.paymentMethod %></p>
                                    <p class="mb-0">Status: <%= order.paymentStatus%></p>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="order-info">
                                    <h5><i class="fas fa-shipping-fast text-primary"></i>Shipping Address</h5>
                                    <p class="mb-1"><%= order.address.fullName %></p>
                                    <p class="mb-1"><%= order.address.address %>, <%= order.address.locality %></p>
                                    <p class="mb-1"><%= order.address.city %>, <%= order.address.state %> <%= order.address.pincode %></p>
                                    <p class="mb-0">Phone: <%= order.address.phoneNumber %></p>
                                </div>
                            </div>
                        </div>

                        <!-- Products Table -->
                        <div class="table-responsive mt-4">
                            <table class="table">
                                <thead>
                                    <tr>
                                        <th>Product</th>
                                        <th class="text-end">Price</th>
                                        <th class="text-center">Qty</th>
                                        <th class="text-end">Total</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% let subtotal=0; order?.items.forEach(function(item) { 
                                        let total=item?.product?.discount_price * item?.qty; 
                                        subtotal +=total; %>
                                        <tr>
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <img src="/assets/imgs/productIMG/<%=item?.product?.images[0]%>" 
                                                        class="product-img me-3" alt="Product">
                                                    <div><%=item?.product?.name %></div>
                                                </div>
                                            </td>
                                            <td class="text-end">₹<%= item?.product?.discount_price.toLocaleString() %></td>
                                            <td class="text-center"><%=item.qty %></td>
                                            <td class="text-end">₹<%= total.toLocaleString() %></td>
                                        </tr>
                                    <% }) %>
                                </tbody>
                                <tfoot class="border-top">
                                    <tr>
                                        <td colspan="3" class="text-end">Subtotal:</td>
                                        <td class="text-end">₹<%= order?.totalAmount %></td>
                                    </tr>
                                    <tr>
                                        <td colspan="3" class="text-end">Shipping:</td>
                                        <td class="text-end">₹0.00</td>
                                    </tr>
                                    <tr>
                                        <td colspan="3" class="text-end" >Discount:</td>
                                        <td class="text-end" style="color: rgb(8, 238, 58);">₹<%= order?.discount %></td>
                                    </tr>
                                    <tr>
                                        <td colspan="3" class="text-end"><strong>Total:</strong></td>
                                        <td class="text-end"><strong>₹<%= order?.finalAmount %></strong></td>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script>
        function confirmCancel(orderId) {
            Swal.fire({
                title: 'Cancel Order?',
                text: "Are you sure you want to cancel this order?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#d33',
                cancelButtonColor: '#3085d6',
                confirmButtonText: 'Yes, cancel it!'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = `/order/cancelorder?id=${orderId}`;
                }
            });
        }

        function confirmReturn(orderId) {
            Swal.fire({
                title: 'Request Return?',
                text: "Do you want to initiate a return request?",
                icon: 'question',
                showCancelButton: true,
                confirmButtonColor: '#3085d6',
                cancelButtonColor: '#d33',
                confirmButtonText: 'Yes, request return'
            }).then((result) => {
                if (result.isConfirmed) {
                    window.location.href = `/return-request?id=${orderId}`;
                }
            });
        }
    </script>
</body>
</html>