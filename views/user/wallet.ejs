<%- include('../Layout/usertem.ejs') %>
  <%- include ("../layout/cdn")%>

<section class="py-5 mt-5">
    <div class="container py-5 mt-5">
        
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="card shadow-lg p-4">
                    <div class="card-body">
                        <h3 class="text-center mb-4">My Wallet</h3>

                        <!-- Display Wallet Balance -->
                        <div class="wallet-balance mb-4">
                            <h4>Balance: ₹<%= wallet.balance %></h4>
                        </div>

                        <!-- Display Transactions -->
                        <h5 class="mb-3">Transactions</h5>
                        <table class="table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>Date</th>
                                    <th>Type</th>
                                    <th>Amount</th>
                                    <th>Description</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (wallet.transactions && wallet.transactions.length > 0) { %>
                                    <% wallet.transactions.forEach(function(transaction) { %>
                                        <tr>
                                            <td><%= new Date(transaction.date).toLocaleDateString() %></td>
                                            <td class="<%= transaction.type === 'credit' ? 'text-success' : 'text-danger' %>">
                                                <%= transaction.type %>
                                            </td>
                                            <td>₹<%= transaction.amount %></td>
                                            <td><%= transaction.description || '-' %></td>
                                        </tr>
                                    <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="4" class="text-center">No transactions found</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>

                        <!-- Message for Errors or Wallet Not Found -->
                        <% if (typeof message !== 'undefined') { %>
                            <p class="text-danger text-center"><%= message %></p>
                        <% } %>
                    </div>
                    
                </div>
               <a href="/useraccount"><button class="btn btn-primary" >Go Back</button></a> 
            </div>
        </div>
    </div>
</section>


