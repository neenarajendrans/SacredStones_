    <style>
      .price_container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
            gap: 20px;
        }
        
        .product-box {
            width: calc(33.333% - 20px);
            max-width: 300px;
            border: 1px solid #e0e0e0;
            border-radius: 8px;
            overflow: hidden;
            transition: box-shadow 0.3s ease;
        }
        
        .product-box:hover {
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
        
        .product-image {
            position: relative;
            height: 200px;
            overflow: hidden;
        }
        
        .product-image img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }
        
        .wishlist-btn {
            position: absolute;
            top: 10px;
            right: 10px;
            background: rgba(255,255,255,0.7);
            border: none;
            border-radius: 50%;
            width: 30px;
            height: 30px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
        }
        
        .product-info {
            padding: 15px;
        }
        
        .product-name {
            margin: 0 0 10px;
            font-size: 1rem;
        }
        
        .price-box {
            margin-bottom: 10px;
        }
        
        
        
        .discount-price {
            font-weight: bold;
            color: #080808;
        }
        
        .action-box {
            display: flex;
            justify-content: space-between;
        }
        
        .add-to-cart-btn, .view-details-btn {
            padding: 8px 15px;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
            text-align: center;
            font-size: 0.9rem;
        }
        
        .add-to-cart-btn {
            background-color: #e4a333;
            color: white;
            flex: 1;
            margin-right: 10px;
        }
        
        .view-details-btn {
            background-color: #e4a333;
            color: white;
            flex: 1;
        }
        
        @media (max-width: 768px) {
            .product-box {
                width: calc(50% - 20px);
            }
        }
        
        @media (max-width: 480px) {
            .product-box {
                width: 100%;
            }
        }

        .filter-sort-container {
            display: flex;
            justify-content: center;
            align-items: center;
            gap: 20px;
            margin-bottom: 20px;
            padding: 15px;
            background-color: #f5f5f5;
            border-radius: 8px;
        }

        .filter-sort-container label {
            
            display: flex;
            align-items: center;
            font-weight: bold;
            color: #0f0f0f;
            white-space: nowrap;
            
        }

        .filter-sort-container select {
            margin-left: 10px;
            padding: 8px 12px;
            border: 1px solid white;
            border-radius: 4px;
            background-color: white;
            font-size: 14px;
            color: #333;
            cursor: pointer;
            transition: border-color 0.3s ease;
        }

        .filter-sort-container select:hover,
        .filter-sort-container select:focus {
            border-color: #e4a333;
            outline: none;
        }

        /* ... (rest of the previous styles remain unchanged) ... */
    </style>
</head>
<body>
    <%- include ("../layout/userHeader")%>
    
    <div class="filter-sort-container">
        <label for="product-type">
            Filter by
            <select name="product-type" id="product-type" class="filter">
                <option value="0">All Jewellery</option>
                <option value="1">Earrings</option>
                <option value="2">Hand chain</option>
                <option value="3">Bangles</option>
                <option value="3">Necklaces</option>
                <option value="3">Rings</option>
                <option value="3">Pendent Necklaces</option>
            </select>
        </label>
        <label for="sort">
            Sort by
            <select name="sort" id="sort">
                <option value="name">Name</option>
                <option value="price">Price</option>
                <option value="date">New</option>
            </select>
        </label>
    </div>
<section class="price_section layout_padding">
    <div class="container">
        <div class="heading_container">
            <h2>All Products</h2>
        </div>
        <div class="price_container">
            <% product.forEach((ele) => { %>
                <% if(ele.is_listed) { %>
                    <div class="product-box">
                        <div class="product-image">
                            <img src="/assets/imgs/productIMG/<%= ele.images[0] %>" alt="<%= ele.name %>">
                            <button class="wishlist-btn" data-product-id="<%= ele._id %>">
                                <i class="fa fa-heart"></i>
                            </button>
                        </div>
                        <div class="product-info">
                            <h6 class="product-name"><%= ele.name %></h6>
                            <div class="price-box">
                                
                                    <span class="discount-price">â‚¹<%= ele.discount_price %></span>
                                
                            </div>
                            <div class="action-box">
                                <button class="add-to-cart-btn" data-product-id="<%= ele._id %>">
                                    Add to Cart
                                </button>
                                <a href="/productdetail?id=<%= ele._id %>" class="view-details-btn">View Details</a>
                            </div>
                        </div>
                    </div>
                <% } %>
            <% }) %>
        </div>
        <% if(product.length ===0) {%>
            <p>No Products</p>
       <% } %>
    </div>
    
</section>
     
