<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Return Request Management</title>
    <!-- Bootstrap 5 CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <style>
        :root {
            --primary-color: #2c3e50;
            --secondary-color: #34495e;
            --accent-color: #3498db;
            --background-light: #ecf0f1;
            --text-color: #2c3e50;
            --card-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }

        * {
            transition: all 0.3s ease;
        }

        body {
            background-color: var(--background-light);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            color: var(--text-color);
            line-height: 1.6;
        }

       

        .main-wrap {
            padding: 30px;
            background: linear-gradient(135deg, #f6f8f9 0%, #e5ebee 100%);
        }

        .content-header {
            margin-bottom: 2rem;
            background: white;
            padding: 15px;
            border-radius: 10px;
            box-shadow: var(--card-shadow);
        }

        .content-title {
            color: var(--primary-color);
            font-weight: 700;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .content-title::before {
            content: '';
            width: 30px;
            height: 4px;
            background: var(--accent-color);
        }

        .card {
            border: none;
            border-radius: 15px;
            box-shadow: var(--card-shadow);
            overflow: hidden;
            background: white;
        }

        .table {
            margin-bottom: 0;
        }

        .table thead {
            background: linear-gradient(135deg, #f6f8f9 0%, #e5ebee 100%);
        }

        .table th {
            color: var(--secondary-color);
            font-weight: 700;
            text-transform: uppercase;
            font-size: 0.8rem;
            letter-spacing: 1px;
            border-bottom: 2px solid var(--accent-color);
        }

        .table-striped tbody tr:nth-of-type(odd) {
            background-color: rgba(52,152,219,0.05);
        }

        .table-hover tbody tr:hover {
            background-color: rgba(52,152,219,0.1);
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.05);
        }

        .badge {
            font-weight: 600;
            padding: 0.5em 0.8em;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .btn-outline-secondary {
            border-color: var(--accent-color);
            color: var(--accent-color);
            display: flex;
            align-items: center;
            gap: 8px;
            font-weight: 600;
        }

        .btn-outline-secondary:hover {
            background-color: var(--accent-color);
            color: white;
        }

        .approve-return {
            display: flex;
            align-items: center;
            gap: 8px;
            font-weight: 600;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .approve-return:hover {
            transform: translateY(-4px);
            box-shadow: 0 6px 20px rgba(52,152,219,0.3);
        }

        .alert-info {
            background: linear-gradient(135deg, #e7f3fe 0%, #b6dcfe 100%);
            border: none;
            color: var(--secondary-color);
            font-weight: 600;
        }

        @media (max-width: 768px) {
            .main-wrap {
                padding: 15px;
            }
            .content-header {
                flex-direction: column;
                align-items: flex-start !important;
            }
            .table-responsive {
                font-size: 0.85rem;
            }
        }

        /* Animated Gradient Background */
        @keyframes gradientBG {
            0% {background-position: 0% 50%;}
            50% {background-position: 100% 50%;}
            100% {background-position: 0% 50%;}
        }
    </style>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">
            <img src="/img/logo_main.png" width="400" height="70" class="d-inline-block align-top" alt="Your Logo">
            
        </a>
      
    </nav>
    
    <main class="main-wrap">
        <section class="content-main p-3">
            <div class="content-header mb-4 shadow-sm">
                <div class="d-flex justify-content-between align-items-center">
                    <h2 >
                        <i class="fas fa-sync text-primary"></i>
                        Return Request Orders
                    </h2>
                    <a href="/admin/dashboard" class="btn btn-outline-secondary">
                        <i class="fa fa-arrow-left"></i>
                        Back to Dashboard
                    </a>
                </div>
            </div>
           
            <% if(orders?.filter((order)=>order.orderStatus==="Return Request").length > 0) {%>
                <div class="card">
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover table-striped table-bordered mb-0">
                                <thead>
                                    <tr>
                                        <th>#ID</th>
                                        <th>Name</th>
                                        <th>Total</th>
                                        <th>Payment Method</th>
                                        <th>Order Date</th>
                                        <th>Delivery Date</th>
                                        <th>Return Reason</th>
                                        <th>Order Status</th>
                                        <th>Payment Status</th>
                                        <th class="text-end">Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% orders.forEach(function(order) { 
                                        if(order.orderStatus === "Return Request") { %>
                                        <tr>
                                            <td><%= order._id.toString().slice(-4) %></td>
                                            <td><b><%= order.user_id?.fullName || 'N/A' %></b></td>
                                            <td class="text-primary font-weight-bold">$<%= order.totalAmount %></td>
                                            <td>
                                                <% if(order.paymentMethod === 'CashOnDelivery') { %>
                                                    <span class="badge bg-primary">COD</span>
                                                <% } else if(order.paymentMethod === 'Online') { %>
                                                    <span class="badge bg-info">Online</span>
                                                <% } else if(order.paymentMethod === 'Wallet') { %>
                                                    <span class="badge bg-success">Wallet</span>
                                                <% } %>
                                            </td>
                                            <td><%= new Date(order.orderDate).toLocaleDateString() %></td>
                                            <td><%= order.deliveryDate ? new Date(order.deliveryDate).toLocaleDateString() : 'Pending' %></td>
                                            <td class="text-muted"><%= order.returnReason || 'Not Specified' %></td>
                                            <td>
                                                <span class="badge bg-warning text-dark">Return Request</span>
                                            </td>
                                            <td>
                                                <% if(order.paymentStatus === 'Paid') { %>
                                                    <span class="badge bg-success">Paid</span>
                                                <% } %>
                                            </td>
                                            <td class="text-end">
                                                <button 
                                                    class="btn btn-primary btn-sm approve-return" 
                                                    data-order-id="<%= order._id %>"
                                                    onclick="handleReturnApproval('<%= order._id %>')"
                                                >
                                                    <i class="fas fa-check-circle me-1"></i>Approve Return
                                                </button>
                                            </td>
                                        </tr>
                                    <% } 
                                    }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            <% } else { %>
                <div class="alert alert-info text-center">
                    <i class="fas fa-inbox fa-3x mb-3"></i>
                    <p class="mb-0">No Return Requests Available</p>
                </div>
            <% } %>
        </section>
    </main>
    
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
    function handleReturnApproval(orderId) {
        console.log(orderId);
        
        Swal.fire({
            title: 'Confirm Return Request',
            html: `
                <div class="text-center">
                    <i class="fas fa-sync fa-3x text-primary mb-3"></i>
                    <p>Are you sure you want to approve this return?</p>
                </div>
            `,
            icon: 'question',
            showCancelButton: true,
            confirmButtonColor: '#3498db',
            cancelButtonColor: '#95a5a6',
            confirmButtonText: 'Approve Return',
            cancelButtonText: 'Cancel'
        }).then((result) => {
            if (result.isConfirmed) {
                console.log(orderId);
                
                fetch(`/admin/returnapprove/${orderId}`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    }
                })
                .then(response => response.json())
                .then(data => {
                    if(data.success) {
                        Swal.fire({
                            title: 'Approved!',
                            html: `
                                <div class="text-center">
                                    <i class="fas fa-check-circle fa-3x text-success mb-3"></i>
                                    <p>Return request has been processed successfully.</p>
                                </div>
                            `,
                            icon: 'success'
                        }).then(() => {
                            location.reload();
                        });
                    } else {
                        Swal.fire({
                            title: 'Error!',
                            html: `
                                <div class="text-center">
                                    <i class="fas fa-exclamation-triangle fa-3x text-danger mb-3"></i>
                                    <p>${data.message || 'Failed to process return.'}</p>
                                </div>
                            `,
                            icon: 'error'
                        });
                    }
                })
                .catch(error => {
                    Swal.fire({
                        title: 'Error!',
                        html: `
                            <div class="text-center">
                                <i class="fas fa-wifi fa-3x text-danger mb-3"></i>
                                <p>Unable to Process. </p>
                            </div>
                        `,
                        icon: 'error'
                    });
                });
            }
        });
    }
    </script>
</body>
</html>